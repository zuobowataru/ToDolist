<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- mapper要素のnamespace属性に、Repositoryインタフェースの完全修飾クラス名(FQCN)を指定する。 -->
<mapper namespace="com.example.todo.domain.repository.todo.TodoRepository">

    <!-- <resultMap>要素に、検索結果(ResultSet)とJavaBeanのマッピング定義を行う -->
    <resultMap id="todoResultMap" type="Todo">
        <id property="todoId" column="todo_id" />
        <result property="todoGroup" column="todo_group" />        
        <result property="todoTitle" column="todo_title" />
        <result property="finished" column="finished" />
        <result property="contents" column="contents" />
        <result property="timelimit" column="timelimit" />               
        <result property="createdAt" column="created_at" />     
    </resultMap>

    <!-- todoId(PK)が一致するレコードを1件取得するSQLを実装する。resultMap属性には、適用するマッピング定義のIDを指定 -->
    <select id="findById" parameterType="String" resultMap="todoResultMap">
    <![CDATA[
        SELECT
        *
        FROM
            todo
        WHERE
            todo_id = #{todoId}
    ]]>
    </select>

    <!-- 全レコードを取得するSQLを実装している。 -->
    <select id="findAll" resultMap="todoResultMap">
    <![CDATA[
        SELECT
        *
        FROM
            todo
    ]]>
    </select>

    <!-- 引数に指定されたTodoオブジェクトを挿入するSQLを実装する -->
    <insert id="create" parameterType="Todo">
    <![CDATA[
        INSERT INTO todo
        (
            todo_id,
            todo_group,
            todo_title,
            finished,
            contents,
            timelimit,
            created_at          
        )
        VALUES
        (
            #{todoId},
            #{todoGroup},
            #{todoTitle},
            #{finished},
            #{contents},            
            #{timelimit},
            #{createdAt}
        )
    ]]>
    </insert>

    <!-- 引数に指定されたTodoオブジェクトを更新する -->
    <update id="update" parameterType="Todo">
    <![CDATA[
        UPDATE todo
        SET
            todo_group = #{todoGroup},
            todo_title = #{todoTitle},
            finished = #{finished},
            contents = #{contents},
            timelimit = #{timelimit},
            created_at = #{createdAt}
        WHERE
            todo_id = #{todoId}
    ]]>
    </update>

    <!-- 引数に指定されたTodoオブジェクトを削除する-->
    <delete id="delete" parameterType="Todo">
    <![CDATA[
        DELETE FROM
            todo
        WHERE
            todo_id = #{todoId}
    ]]>
    </delete>

    <!-- 引数に指定されたfinishedに一致するTodoの件数を取得する -->
    <select id="countByFinished" parameterType="Boolean"
        resultType="Long">
    <![CDATA[
        SELECT
            COUNT(*)
        FROM
            todo
        WHERE
            finished = #{finished}
    ]]>
    </select>

    <!-- 追加 -->
    <select id="findView" parameterType="Boolean"
        resultType="Long">
    <![CDATA[
        SELECT
            COUNT(*)
        FROM
            todo
    ]]>
    </select>
    
</mapper>